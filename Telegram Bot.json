      "id": "aa1fdcff-c567-4306-b66c-79826b7a4054",
      "name": "AI Agent Save Chat"
    },
    {
      "parameters": {
        "functionCode": "const rawPayload = Object.prototype.hasOwnProperty.call($json, 'output') ? $json.output : $json;\nlet payload = {};\n\nif (typeof rawPayload === 'string') {\n  let text = rawPayload.trim();\n  if (!text) {\n    return [];\n  }\n  const fencePattern = /^```[a-zA-Z0-9_-]*\\n([\\s\\S]*?)\\n```$/;\n  const singleLineFencePattern = /^```[a-zA-Z0-9_-]*\\n?([\\s\\S]*?)```$/;\n  if (text.startsWith('```')) {\n    let match = text.match(fencePattern);\n    if (!match) {\n      match = text.match(singleLineFencePattern);\n    }\n    if (match) {\n      text = match[1].trim();\n    } else {\n      text = text.replace(/^```[a-zA-Z0-9_-]*\\n?/, '').replace(/\\n?```$/, '').trim();\n    }\n  }\n  if (!text.startsWith('{')) {\n    text = text.replace(/^json\\s*/i, '').trim();\n  }\n  try {\n    payload = JSON.parse(text);\n  } catch (error) {\n    try {\n      const decodedText = JSON.parse(`\"${text.replace(/\\\\/g, '\\\\').replace(/\"/g, '\\\"')}\"`);\n      payload = JSON.parse(decodedText);\n    } catch (secondaryError) {\n      throw new Error('AI Agent Save Chat devolvio texto que no es JSON valido: ' + error.message + ' | Fallback: ' + secondaryError.message);\n    }\n  }\n} else if (rawPayload && typeof rawPayload === 'object') {\n  payload = rawPayload;\n}\n\nconst summary = (payload.summary ?? '').trim();\nif (summary) {\n  this.logger.info('[AI Agent Save Chat] ' + summary);\n}\n\nconst mapping = [\n  ['sql_user_message', 'chat.save_user_message'],\n  ['sql_bot_response', 'chat.save_bot_response'],\n];\n\nconst statements = [];\n\nfor (const [key, target] of mapping) {\n  const sql = (payload[key] ?? '').trim();\n  if (sql) {\n    statements.push({\n      json: {\n        query: sql,\n        target,\n        summary,\n        source: key,\n      },\n    });\n  }\n}\n\nif (!statements.length) {\n  this.logger.warn('Prepare SQL statements: ninguna sentencia generada por el agente');\n}\n\nreturn statements;"
      },
